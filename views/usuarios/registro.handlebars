    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Crie sua conta:</h3>
<div class="card">
    <div class="card-body">
        <form action="" method="post">
            <label for="nome">Nome: </label>    
                <input type="text" name="nome" class="form-control">
           
            <label for="email">Email: </label>    
                <input type="email" name="email" class="form-control" placeholder="exemplo@email.com">
           
            <label for="senha">Senha: </label>    
                <input type="password" name="senha" class="form-control" placeholder="mínimo 8 caractéres">
            <label for="senha2">Repita a sua senha: </label>    
                <input type="password" name="senha2" class="form-control" placeholder="mínimo 8 caractéres">

            <button type="submit" class="btn btn-success mt-3">Criar conta</button>
        </form>
    </div>
</div>