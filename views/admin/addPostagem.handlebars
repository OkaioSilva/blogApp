{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
    {{else}}
{{/each}}


<div class="card">
    <div class="card-body">
        <h4>Nova postagem:</h4>
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control">

            <label for="slug">Slug:</label>
            <input type="text" name="slug" class="form-control">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control">

            <label for="conteudo" >Conteúdo: </label>
           <textarea name="conteudo" class="form-control"></textarea>
           <label for="categoria">Categoria: </label>
            <select name="categoria" class="form-select" >
                {{!-- data-bs-theme=dark --}}
                {{#each categorias}}
                    <option value="{{_id}}" class="form-control">{{nome}}</option>

                {{else}}

                     <option value="0" class="form-control">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
           <button class="btn btn-success mt-3" type="submit">Criar postagem</button>
        </form>
    </div>
</div>